#include <stdio.h>

int main()
{
    printf("分别输入身高的英尺和英寸：");

    // int foot;
    // int inch;
    double foot;
    double inch;

    // scanf("%d %d", &foot, &inch);
    // double的格式占位符是%lf
    scanf("%lf %lf", &foot, &inch);

    //可以用int除以float实现转化
    // printf('身高是%f米。\n',
      // ((foot + inch/12.0)*0.3084));
    
    printf("身高是%f米。\n",
        ((foot + inch/12)*0.3084));
    
    return 0;
}
